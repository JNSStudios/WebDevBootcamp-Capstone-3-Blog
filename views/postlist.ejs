<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>JNS Blog</title>

        <!-- Bootstrap import -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">


        <!-- Audiowide font import-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">

        <!-- my CSS file -->
        <link rel="stylesheet" href="/styles.css">

    </head>

    <body>
        <%- include('partials/header.ejs') %>

        <!-- Create Post form -->

        <!-- button to show/hide the creation form-->
        <hr>
        <button class="btn btn-primary" id="createPostBtn">Create Post</button>

        <div class="container create-post-form">
            <hr>
            <form action="/create-post" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create Post</button>
            </form>
            <hr>
        </div>
        <hr>

        <h2 class="header-subtitle">Blog post list</h2>

        <% posts.forEach(function(post) { %>
            <div class="card mb-3">
                    <div class="card-body">
                            <h3 class="card-title"><%= post.title %></h3>
                            
                    </div>
            </div>
        <% }); %>











        <%- include('partials/footer.ejs') %>


        <!-- Bootstrap code connection-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
        
        <!-- jQuery code connection-->
        <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

        <!-- extra scripts-->
         <script src="/script.js"></script>
    </body>
</html>